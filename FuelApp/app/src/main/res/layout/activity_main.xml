<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@android:drawable/spinner_background">


        <View
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:id="@+id/rectangle1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#BECAD9" />

        <TextView
            android:text="@string/vehicle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:id="@+id/tvTitle"
            android:layout_alignTop="@+id/rectangle1"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/spinVehiculos"
            android:layout_below="@+id/tvTitle"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:focusable="false"
            style="@style/Widget.AppCompat.Spinner"
            android:background="@drawable/spinn_style" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="#BECAD9"
            android:id="@+id/rectangle2"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/imgAdd"
            android:src="@drawable/ic_add"
            android:layout_alignBottom="@+id/rectangle1"
            android:layout_toLeftOf="@+id/imgEdit"
            android:layout_below="@+id/spinVehiculos" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/imgEdit"
            android:src="@drawable/ic_edit"
            android:layout_below="@+id/spinVehiculos"
            android:layout_toLeftOf="@+id/imgDelete"
            android:layout_toStartOf="@+id/imgDelete"
            android:layout_alignBottom="@+id/imgAdd" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/imgDelete"
            android:src="@drawable/ic_delete"
            android:layout_alignBottom="@+id/rectangle1"
            android:layout_alignRight="@+id/spinVehiculos"
            android:layout_alignEnd="@+id/spinVehiculos"
            android:layout_alignTop="@+id/imgEdit" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Agregar combustible"
            android:id="@+id/btnAddFuel"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/rectangle2"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_style"
            android:textColor="#FFFFFF" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Registros"
            android:id="@+id/btnRecords"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btnAddFuel"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:textColor="#FFFFFF" />

</RelativeLayout>
